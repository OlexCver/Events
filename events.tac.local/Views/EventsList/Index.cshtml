@using TAC.Utils.Helpers
@using events.tac.local.Models

@model events.tac.local.Models.EventList
<!-- [Event List] -->
<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var navItem in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="@("http" + navItem.Url)">
                        @navItem.EventImage
                    </a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@("http" + navItem.Url)">
                            @navItem.ContentHeading
                        </a>
                    </h3>
                    <div class="description">
                        @navItem.ContentIntro
                    </div>
                </div>
                <div class="metadata well">
                    @navItem.StartDate
                </div>
            </li>
        }
    </ol>
</div>
@Html.Pager(Model.PageSize, Model.TotalResultCount)
<!-- [Event List] -->
